<config>  
    <modules>
        <Shopliebe_PasswordStrength>
            <version>0.0.2</version>
        </Shopliebe_PasswordStrength>
    </modules>
    
    <global>
       <models>
          <customer>
              <rewrite>
                  <customer>Shopliebe_PasswordStrength_Model_Customer</customer>
             </rewrite>
          </customer>
       </models>

        <blocks>
            <passwordstrength>
                <class>Shopliebe_PasswordStrength_Block</class>
            </passwordstrength>
        </blocks>

        <helpers>
            <passwordstrength>
              <class>Shopliebe_PasswordStrength_Helper_Helper</class>
            </passwordstrength>
        </helpers>
    </global>

    <frontend>
        <translate>
            <modules>
                <Shopliebe_PasswordStrength>
                    <files>
                        <default>Shopliebe_PasswordStrength.csv</default>
                    </files>
                </Shopliebe_PasswordStrength>
            </modules>
        </translate>
    </frontend> 

    <adminhtml>
        <translate>
            <modules>
                <Shopliebe_PasswordStrength>
                    <files>
                        <default>Shopliebe_PasswordStrength.csv</default>
                    </files>
                </Shopliebe_PasswordStrength>
            </modules>
        </translate>
    </adminhtml>
</config>